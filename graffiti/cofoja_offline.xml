            <arg line="com.google.java.contract.core.agent.PreMain" />
            <fileset dir="${output.dir}">
                <include name="**/*.class"/>
            </fileset>
        </apply>

        <move todir="${contracts.dir}">
            <fileset dir="${output.dir}">
                <include name="**/*.contracts"/>
            </fileset>
        </move>
    </target>
