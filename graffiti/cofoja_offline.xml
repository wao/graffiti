            <fileset dir="${src.dir}">
                <include name="**/*.java"/>
            </fileset>
        </apply>

        <apply executable="java" verbose="true">
            <env key="CLASSPATH" value="${compile_classpath}"/>
            <arg line="-Dcom.google.java.contract.classpath=${compile_classpath}"/>
            <arg line="-Dcom.google.java.contract.sourcepath=${src.dir}"/>
